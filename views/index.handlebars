<div class="container">
  <div class="logo">
    <h1>Eat Da Burger</h1>
  </div>

  <div id="uneaten">
    <h2>Burgers that are not eaten</h2>

    <ul>
      {{#each burgers}}
      {{#unless devoured}}
      {{> burgers/burgers-block devoured=true}}
      {{/unless}}
      {{/each}}
    </ul>
  </div>

  <div id="addBurger">
    <h2>Add a burger</h2>
    <form class="create-form">

      <div class="form-group">
        <input type="text" id="burger" name="burger_name">
        <button type="submit">Add Burger</button>
      </div>
      
    </form>
  </div>
  <div id="eaten">
    <h2>Burgers that are Eaten</h2>

    <ul>
      {{#each burgers}}
      {{#if devoured}}
      {{> burgers/burgers-block devoured=false}}
      {{/if}}
      {{/each}}
    </ul>
  </div>

</div>